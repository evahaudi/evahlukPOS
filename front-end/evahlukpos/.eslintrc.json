{
    "env": {
        "browser": true,
        "es2021": true
    },
    
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
      },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$"
      }
}
